[user]
        name = Marco Ollivier
        email = marcopollivier@gmail.com
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	clean = git-lfs clean -- %f
	required = true
[commit]
	gpgsign = true
[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
[init]
	defaultBranch = main
[core]
	excludesFile = ~/.gitignore.global
